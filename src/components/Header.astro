---
import { Image } from 'astro:assets';
import logo from '@assets/logo.jpeg';

interface MenuItems {
  name: string;
  href: string;
}

const pages: MenuItems[] = [];
const buttons: MenuItems[] = [];
---

<header
  class="bg-white dark:bg-slate-800 shadow-sm dark:shadow-slate-900/50 dark-mode-transition"
  dir="rtl"
>
  <div
    class="mx-auto flex h-16 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8"
  >
    <a
      class="block text-primary dark:text-white"
      href="/#"
    >
      <span class="sr-only">Home</span>
      <div class="text-primary dark:text-white">
        <Image
          src={logo}
          class="size=8 rounded-full"
          alt="Home"
          height="48"
          width="48"
          decoding="async"
          loading="lazy"
        />
      </div>
    </a>

    <div class="flex flex-1 items-center justify-end md:justify-between">
      <nav
        aria-label="Global"
        class="hidden md:block"
      >
        <ul class="flex items-center gap-6 text-sm">
          {
            pages.map((item) => {
              <li>
                <a
                  class="text-primary/70 dark:text-white/70 transition hover:text-primary dark:hover:text-white"
                  href={item.href}
                >
                  {' '}
                  {item.name}
                </a>
              </li>;
            })
          }
        </ul>
      </nav>

      <div class="flex items-center gap-4">
        <div class="sm:flex sm:gap-4 items-center">
          {
            buttons.map((button) => {
              <a
                class="block rounded-md bg-primary dark:bg-white text-white dark:text-primary px-5 py-2.5 text-sm font-medium transition hover:bg-primary/90 dark:hover:bg-white/90"
                href={button.href}
              >
                {button.name}
              </a>;
            })
          }
        </div>
      </div>
    </div>
  </div>
</header>
